<h1>Update Pet</h1>
<h2>Edits for <%= @pet.name %></h2>
<form method="POST" action="/pets/<%= @pet.id %>">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br />
    <input type="text" name="pet_name" value="<%= @pet.name%>">
    <p>Select an existing owner or create a new one below.</p>
    <h3>Existing Owners:</h3>
    <% @owners.each do |owner|%>
        <input type="radio" name="owner[name]" id="<%= owner.id%>" value="<%= owner.id%>" <%= 'checked' if @pet.owner.id == owner.id %>><%= owner.name%><br />
    <%end%>
    <br />
    <h3>New Owner</h3>
    <label>Owner Name:</label>
    <br />
    <input type="text" name="owner_name" id="owner_name"><br /><br />
    <input type="submit" name="submit" value="Update Pet">
</form

